<Alloy>
	<Window title="MY HEALTH RECORD" id="myhealth" backButtonTitle="" class="wfill hfill" navTintColor="#CE1D1C">
		<RightNavButton>
	        <View>
	         	<ImageView right='0' id="moreHealth" width='30' image="/images/health_love.png" />
	        </View>
        </RightNavButton>
		<View class="hfill wfill vert" id="main" backgroundColor="#ffffff">
			<View class='wfill horz' height="50" backgroundColor="#DEDEDE" platform="android" > 
				<View left="0" width="10%">
		         	<ImageView left='10' id="btnBack" width="25" height="25" image="/images/btn-back.png" />
		   		</View>
		     	<View id="pageTitle" width="80%">
		     		<Label height="Ti.UI.SIZE" class='normal_font' textAlign="center">Health Info</Label>
		     	</View>
		     	<View width="10%">
		         	<ImageView id="moreHealth" width="30" image="/images/health_love.png" />
		   		</View>
		 	</View>
			<ScrollView id="graphScrollView" layout="vertical" height="auto" width="100%" backgroundColor="#EBEBEB" contentWidth="Ti.UI.FILL" >
				<View id="bmiView" onClick="navTo" gType="1" height="Ti.UI.SIZE" layout="vertical" left="10" right="10" top="10" borderColor="#dfe0e4" width="Ti.UI.FILL" backgroundColor="#FFFFFF" visible="false">
					<WebView onLoad="getDataByType" gType="1" id="bmiWebView" height="230" width="Ti.UI.FILL" url="/html/bmi.html" disableBounce='true' touchEnabled="false"></WebView>
					<View touchEnabled="false" height="1" left="10" right="10" bottom="0" backgroundColor="#dfe0e4" width="Ti.UI.FILL" />
					<View touchEnabled="false" height="Ti.UI.SIZE" left="10" right="10" top="10" bottom="10">
						<Label touchEnabled="false" color="#9197a3" font="fontSize: 12" width="Ti.UI.SIZE" height="Ti.UI.SIZE" left="0">Latest</Label>
						<Label touchEnabled="false" color="#9197a3" font="fontSize: 12" width="Ti.UI.SIZE" height="Ti.UI.SIZE" right="0" id="bmiDetailLabel" />
					</View>
				</View>
				
			</ScrollView>
		</View>
	</Window>
</Alloy>