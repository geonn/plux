<Alloy>
<Window title="Ask Me - Helpline" id="win" backButtonTitle="" class="container" navTintColor="#CE1D1C">
	<View class="hfill wfill vert">
		<View layout="horizontal" height="50" width="Ti.UI.FILL" backgroundColor="#DEDEDE" platform="android" > 
			<View left="0" width="20%">
	         	<ImageView left='10' id="btnBack" onClick="closeWindow" width="25" height="25" image="/images/btn-back.png" />
	   		</View>
	     	<View width="60%">
	     		<Label id="pageTitle" height="Ti.UI.SIZE" class='normal_font' textAlign="center">Ask Me - Helpline</Label>
	     	</View>
	 	</View>
	 	<ScrollView class="wfill hfill" contentHeight="Ti.UI.FILL" contentWidth="Ti.UI.FILL">
	    	<ScrollView id="chatroom" onScroll="scrollChecker" backgroundRepeat="true" backgroundImage="/images/grey-patern-bg.png" class="wfill hfill" bottom="50" contentHeight="Ti.UI.SIZE" contentWidth="Ti.UI.FILL" transform="Ti.UI.create2DMatrix().rotate(180)">
	    		<View id="inner_area" class="wfill hsize vert" bottom="20" >
	    			<!--<Label onClick="getPreviousData" m_id="no" class="wfill hsize box padding h5" textAlign="center">More</Label>-->
	    		</View>
			</ScrollView>
		    <View backgroundColor="white" class="wfill hsize" height="50" bottom="0" id='bottom_bar'>
		    	<TextField id="message" id="message_bar" onChange="switchIcon" font="fontSize: 40" borderColor="#ccc" class="small_padding wfill" left="5" right="50" height="40" ></TextField>
		    	<View id="action_btn" right="0" class="wsize hsize">
		    		<ImageView id="enter_icon" backgroundColor="#ffffff" image="/images/icons/icon_enter.png" top="10" bottom="10" zIndex="3" right="-50" height="30" width="30" onClick="SendMessage"></ImageView>
		    	</View>
		    </View>
	    </ScrollView>
	</View>
</Window>
</Alloy>