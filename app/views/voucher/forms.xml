<Alloy>
	<Window title="Health Screening Voucher" id="win" backButtonTitle="" class="container" navTintColor="#CE1D1C">
		<View class="wfill hfill vert">
			<View layout="horizontal" height="50" width="Ti.UI.FILL" backgroundColor="#DEDEDE" platform="android" > 
				<View left="0" width="10%">
		         	<ImageView left='10' id="btnBack" width="25" height="25" image="/images/btn-back.png" />
		   		</View>
		     	<View width="90%">
		     		<Label id="pageTitle" height="Ti.UI.SIZE" class='normal_font' textAlign="center">Health Screening Voucher</Label>
		     	</View>
		 	</View>
	 	    <Label class="wfill hsize padding h5" color="#ffffff">Please fill in below info to request Outpatient GL from ASP</Label>
		 	<Label class="wfill hsize padding h7" top="0" color="#ffffff"> * COMPULSORY</Label>
			<ScrollView class="wfill hfill vert contwfill conthsize" id="forms">
                <View class='wfill hsize vert padding rounded' backgroundColor="#ffffff" format="photo" hintText="Recepit" attached="0" required="1">
                    
                    <Label class="wfill hsize h5" color='#000000' top="10" left="10" touchEnabled="false">REFERRAL LETTER *</Label>
                    <View class="hr" backgroundColor="#ccc" top="10" left="10" right="10"></View>
                    <Widget id="camera" src="com.geonn.camera" />
                </View>
                <View class="combo_box rounded" id="patient_name" backgroundColor="#fba81c" onClick="popout" option_key="name" option_name="name" touchEnabled="false" opacity="0.5" onPostlayout="loadComboBox" url="claimunder.aspx">
                    <View class="field" required="1" hintText="Patient Name" value="" left="5" backgroundColor="#ffffff" touchEnabled="false">
                        <Label class="wfill hsize h5" color='#000000' left="10" touchEnabled="false">Patient Name *</Label>
                    </View>
                </View>
                <View class="combo_box rounded" id="employee_name" backgroundColor="#fba81c" onClick="popout" option_key="name" option_name="name" touchEnabled="false" opacity="0.5" onPostlayout="loadComboBox" url="claimunder.aspx">
                    <View class="field" required="1" hintText="Employee Name" value="" left="5" backgroundColor="#ffffff" touchEnabled="false">
                        <Label class="wfill hsize h5" color='#000000' left="10" touchEnabled="false">Employee Name *</Label>
                    </View>
                </View>
                <View backgroundColor="#fba81c" id="employee_ic" value="" class="wfill hsize padding rounded" top="0">
                    <TextField maxLength="30" hintText="Employee IC number *" onChange="textFieldOnBlur" required="1" left="5" value=""></TextField>
                </View>
                <View backgroundColor="#fba81c" id="hospital_name" value="" class="wfill hsize padding rounded" top="0">
                    <TextField maxLength="50" hintText="Name of Hospital *" onChange="textFieldOnBlur" required="1" left="5" value=""></TextField>
                </View>
                <View class="combo_box rounded" id="visit_date" backgroundColor="#fba81c" onClick="datePicker">
                    <View class="field" required="1" hintText="Date Visit" value="" left="5" backgroundColor="#ffffff" touchEnabled="false">
                        <Label class="wfill hsize h5" color='#000000' left="10" touchEnabled="false">Date of Visit *</Label>
                    </View>
                </View>
                <View backgroundColor="#fba81c" id="diagnosis" value="" class="wfill hsize padding rounded" top="0">
                    <TextField maxLength="50" hintText="Diagnosis" onChange="textFieldOnBlur" required="0" left="5" value=""></TextField>
                </View>
                <View backgroundColor="#fba81c" id="dr_name" value="" class="wfill hsize padding rounded" top="0">
                    <TextField maxLength="50" hintText="Dr Name" onChange="textFieldOnBlur" required="0" left="5" value=""></TextField>
                </View>
                <Button onClick="doSubmit" width="70%" bottom="10" title="SUBMIT"></Button>
                
            </ScrollView>
		</View>
	</Window>
</Alloy>