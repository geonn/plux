											<PickerRow id="GENERAL PATHOLOGY" title="GENERAL PATHOLOGY"/>
											<PickerRow id="ANATOMICAL PATHOLOGY" title="ANATOMICAL PATHOLOGY"/>
											<PickerRow id="CHEMICAL PATHOLOGY" title="CHEMICAL PATHOLOGY"/>
											<PickerRow id="HAEMATOLOGY" title="HAEMATOLOGY"/>
											<PickerRow id="MEDICAL MICROBIOLOGY" title="MEDICAL MICROBIOLOGY"/>
											<PickerRow id="FORENSIC PATHOLOGY" title="FORENSIC PATHOLOGY"/>
											<PickerRow id="TRANSFUSION MEDICINE" title="TRANSFUSION MEDICINE"/>
											<PickerRow id="PSYCHIATRY" title="PSYCHIATRY"/>
											<PickerRow id="PUBLIC HEALTH MEDICINE" title="PUBLIC HEALTH MEDICINE"/>
											<PickerRow id="OBSTETRICS AND GYNAECOLOGY (O & G)" title="OBSTETRICS AND GYNAECOLOGY (O & G)"/>
											<PickerRow id="SURGERY" title="SURGERY"/>
											<PickerRow id="CARDIOTHORACIC SURGERY" title="CARDIOTHORACIC SURGERY"/>
											<PickerRow id="NEUROSURGERY" title="NEUROSURGERY"/>
											<PickerRow id="PAEDIATRIC SURGERY" title="PAEDIATRIC SURGERY"/>
											<PickerRow id="PLASTIC SURGERY" title="PLASTIC SURGERY"/>
											<PickerRow id="OPHTHALMOLOGY" title="OPHTHALMOLOGY"/>
											<PickerRow id="OTORHINOLARYNGOLOGY" title="OTORHINOLARYNGOLOGY"/>
											<PickerRow id="ORTHOPAEDIC SURGERY" title="ORTHOPAEDIC SURGERY"/>
											<PickerRow id="UROLOGY" title="UROLOGY"/>
										</PickerColumn>
									</Picker>
								<View id="vImgSearchBorder">
									<View id="vImgSearch">
										<ImageView id="imgFilter" onClick="clickSpecial"></ImageView>
									</View>
								</View>
							</View>
						</View>
					</View>

					<View id="vHeart">
						<View id="vHeartLeft">
							<ImageView id="imgHeartLeft"></ImageView>
						</View>
						<View id="vNameRight">
							<View id="vNameRightTop">
								<Label id="lname">Hospital/Medical center:</Label>
							</View>
							<View id="vNameRightBottom">
								<TextField id="tfHospital"></TextField>
								<View id="vImgSearchBorder">
									<View id="vImgSearch">
										<ImageView id="imgFilter"></ImageView>
									</View>
								</View>
							</View>
						</View>
					</View>

					<View id="vSearch">
						<Button id="bSearch" onClick="doClick">Search</Button>
					</View>

					<View id="test">

					</View>

				</View>
            </ScrollView>
		</View>
