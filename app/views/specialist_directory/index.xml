						<View id="vNameRight">
							<View id="vNameRightTop">
								<Label id="lname">Specialitist:</Label>
							</View>
							<View id="vNameRightBottom">
								<TextField id="tfName"></TextField>
								<View id="vImgSearchBorder">
									<View id="vImgSearch">
