<Alloy>
	<Window title="SPECIALIST" id="win" backButtonTitle="" class="wfill hfill" navTintColor="#CE1D1C">
		<View class="wfill hfill vert"> 
			<View layout="horizontal" height="50" width="Ti.UI.FILL" backgroundColor="#DEDEDE" platform="android" > 
				<View left="0" width="20%">
		        	<ImageView left='10' id="btnBack" width="25" height="25" image="/images/btn-back.png" />
		   		</View>
		    	<View width="60%">
		     		<Label id="pageTitle" height="Ti.UI.SIZE" class='normal_font' textAlign="center">SPECIALIST</Label>
		    	</View>
			</View>

			<!-- top bar -->
			<View id="topBar">
				<View id="topBarLeft">
					<Label id="topBarText1">Search for your</Label>
				</View>
				<View id="topBarMiddle">
					<Label id="topBarText2">Specialist</Label>
				</View>
				<View id="topBarRight">
					<ImageView id="imgRight"></ImageView>
				</View>
			</View>

			<!-- main content -->
	 		<ScrollView class="wfill hfill vert contwfill conthsize" id="svMain">
				<View id="mainView">
					<View id="vName">
						<View id="vNameLeft">
							<ImageView id="imgNameLeft"></ImageView>
						</View>
						<View id="vNameRight">
							<View id="vNameRightTop">
								<Label id="lname">Name:</Label>
							</View>
							<View id="vNameRightBottom1">
								<TextField id="tfName"></TextField>
								<!-- <Picker id="tfName"></Picker> -->
								<View id="vImgSearchBorder">
									<View id="vImgSearch">
										<ImageView id="imgSearch"></ImageView>
									</View>
								</View>
							</View>
						</View>
					</View>

					<View id="vState">
						<View id="vStateLeft">
							<ImageView id="imgStateLeft"></ImageView>
						</View>
						<View id="vNameRight">
							<View id="vNameRightTop">
								<Label id="lname">Preferred state:</Label>
							</View>
							<View id="vNameRightBottom">
								<View>
									<Picker id="pState" selectionIndicator="true" selectionOpens="true">
										<PickerColumn id="pColumn1">
											<PickerRow id="any" title="ANY STATE"/>
											<PickerRow id="JOHOR" title="JOHOR"/>
											<PickerRow id="KEDAH" title="KEDAH"/>
											<PickerRow id="KELANTAN" title="KELANTAN"/>
											<PickerRow id="KUALA LUMPUR" title="KUALA LUMPUR"/>
											<PickerRow id="LABUAN" title="LABUAN"/>
											<PickerRow id="MELAKA" title="MELAKA"/>
											<PickerRow id="NEGERI SEMBILAN" title="NEGERI SEMBILAN"/>
											<PickerRow id="PAHANG" title="PAHANG"/>
											<PickerRow id="PENANG" title="PENANG"/>
											<PickerRow id="PERAK" title="PERAK"/>
											<PickerRow id="PERLIS" title="PERLIS"/>
											<PickerRow id="PUTRAJAYA" title="PUTRAJAYA"/>
											<PickerRow id="SABAH" title="SABAH"/>
											<PickerRow id="SARAWAK" title="SARAWAK"/>
											<PickerRow id="SELANGOR" title="SELANGOR"/>
											<PickerRow id="TERENGGANU" title="TERENGGANU"/>
										</PickerColumn>
									</Picker>
								</View>
								<View id="vImgSearchBorder">
									<View id="vImgSearch">
										<ImageView id="imgFilter" onClick="clickState"></ImageView>
									</View>
								</View>
							</View>
						</View>
					</View>

					<View id="vSTC">
						<View id="vSTCLeft">
							<ImageView id="imgSTCLeft"></ImageView>
						</View>
						<View id="vNameRight">
							<View id="vNameRightTop">
								<Label id="lname">Specialities:</Label>
							</View>
							<View id="vNameRightBottom">
								<!-- <TextField id="tfName1"></TextField> -->
								<Picker id="pSpecial" selectionIndicator="true" selectionOpens="true">
										<PickerColumn id="pColumn1">
											<PickerRow id="any" title="ANY SPECIALITY"/>
											<PickerRow id="ANAESTHESIOLOGY AND CRITICAL CARE" title="ANAESTHESIOLOGY AND CRITICAL CARE"/>
											<PickerRow id="EMERGENCY MEDICINE" title="EMERGENCY MEDICINE"/>
											<PickerRow id="FAMILY MEDICINE" title="FAMILY MEDICINE"/>
