"#wrap":{
	width: Ti.UI.FILL,
	height: Ti.UI.SIZE
}

"#playStopBtn":{
	textAlign: Ti.UI.TEXT_ALIGNMENT_LEFT,
	backgroundColor:"transparent",
	font: {
        fontSize: "24dp",
        fontFamily: "FontAwesome"
   	},
   	color: "#fff",
	top: 0,
	width: Ti.UI.SIZE,
	height: Ti.UI.SIZE
}

"#time":{
	font: {
        fontSize: "14dp",
    },
	right:0,
	width: Ti.UI.SIZE
}

"#scrubBar":{
	top: "40dp",
	width: Ti.UI.FILL,
	height: "30dp",
	min: 0,
	max: 100,
	value: 0
}

"#scrubBar[platform=ios]":{
	style: Titanium.UI.iOS.ProgressBarStyle.PLAIN
}